<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con transparencia y bordes redondeados -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF" /> <!-- Color blanco semi-transparente -->
            <corners android:radius="16dp" />
            <padding android:left="12dp" android:top="6dp" android:right="12dp" android:bottom="6dp" />
        </shape>
    </item>

    <!-- Borde semi-transparente -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#CCFFFFFF" /> <!-- Borde blanco mÃ¡s opaco -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Sombra para darle efecto de profundidad -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" /> <!-- Sombra blanca semi-transparente -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>